
<Window x:Class="HIMP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HIMP" Height="400" Width="600">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="Blue" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <TextBlock Text="HIMP" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="36" FontWeight="Bold" Foreground="Gold" Margin="0,20,0,0"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button Content="Dodaj przedmiot" Background="Black" Foreground="White" Height="40" Click="DodajPrzedmiot_Click"/>
            <Button Content="Usuń przedmiot" Background="Black" Foreground="White" Height="40" Click="UsunPrzedmiot_Click"/>
            <Button Content="Wyświetl przedmioty" Background="Black" Foreground="White" Height="40" Click="WyswietlPrzedmioty_Click"/>
            <Button Content="Zamknij program" Background="Red" Foreground="White" Height="40" Click="ZamknijProgram_Click"/>
        </StackPanel>
    </Grid>
</Window>
