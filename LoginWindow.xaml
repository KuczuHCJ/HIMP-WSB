<Window x:Class="HIMP1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="250" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Text="Username"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>
            <Button Content="Login" Width="200" Click="LoginButton_Click"/>
            <Button Content="Register" Width="200" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
