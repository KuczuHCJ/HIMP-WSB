<Window x:Class="HIMP.RemoveItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuń Przedmiot" Height="400" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Wybierz przedmioty do usunięcia" FontWeight="Bold" Margin="10"/>

           
            <ListBox Name="lstPrzedmioty" SelectionMode="Multiple" Width="300" Height="200" Margin="10"/>

            
            <Button Content="Usuń" Click="UsunPrzedmiot_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
